#!upstart
description "Meteor"
author      "ptb"

start on startup
stop on shutdown
respawn
expect fork

script

    setuid ubuntu
    getgid ubuntu
    env MONGO_URL='mongodb://localhost:27017/fetching'
    env ROOT_URL='http://fetching.io'
    env METEOR_SETTINGS=$(cat /home/meteor/settings.json)
    env HOME="/home/meteor"
    export MONGO_URL ROOT_URL METEOR_SETTINGS HOME
    echo $$ > /var/run/fetching-app.pid
    exec sudo -u ubuntu /usr/bin/node /home/meteor/bundle/main.js >> /var/log/fetching-app.sys.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/fetching-app.sys.log
end script

pre-stop script
    rm /var/run/fetching-app.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/fetching-app.sys.log
end script